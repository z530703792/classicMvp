<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_10"
    android:paddingTop="@dimen/dp_20">


    <RelativeLayout
        android:id="@+id/rl_qr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_dark"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_248"
            android:layout_height="@dimen/dp_40"
            android:layout_above="@+id/tv_1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_47"
            android:src="@mipmap/img_invite_qrtitle" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="我的邀请二维码"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="@dimen/dp_170"
            android:layout_height="@dimen/dp_170"
            android:layout_centerInParent="true"
            android:background="@mipmap/img_invite_img_qrcodebg"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_150" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:text="当面扫一扫或截图分享"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_10">

        <ImageView
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:src="@mipmap/img_invite_icon_close" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_save_to_mobile_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_69"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/img_invite_icon_download" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="保存至手机相册"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>


</RelativeLayout>