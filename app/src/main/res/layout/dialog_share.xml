<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="center"
        android:text="分享至"
        android:textColor="@color/color_FF4A4A4A"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的码："
            android:textColor="@color/color_FF4A4A4A"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_my_invitation_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_FF8C3C"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_share_wx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@mipmap/share_icon_wechat"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_5"
            android:text="微信"
            android:textColor="@color/color_FF32363C"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_share_wxpyq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@mipmap/share_icon_moments"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_5"
            android:text="朋友圈"
            android:textColor="@color/color_FF32363C"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_share_qrcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@mipmap/share_icon_qrcode"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_5"
            android:text="二维码"
            android:textColor="@color/color_FF32363C"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_share_qq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@mipmap/share_icon_qq"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_5"
            android:text="QQ"
            android:textColor="@color/color_FF32363C"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_share_qqkj"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@mipmap/share_icon_zone"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_5"
            android:text="QQ空间"
            android:textColor="@color/color_FF32363C"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_share_copylink"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTop="@mipmap/share_icon_url"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_5"
            android:text="复制链接"
            android:textColor="@color/color_FF32363C"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <View
        style="@style/line_one"
        android:background="@color/color_CED8E1"
        android:layout_marginTop="@dimen/dp_15" />

    <TextView
        android:id="@+id/tv_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:text="取消"
        android:padding="@dimen/dp_15"
        android:textColor="@color/main_color"
        android:textSize="@dimen/sp_17" />

</LinearLayout>