<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/main_color"/>

    <RelativeLayout
        android:id="@+id/rl_title_"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/main_color"
        android:layout_below="@id/view">

        <ImageButton
            android:id="@+id/ib_mall_back_"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/nav_icon_back_wihte" />

        <TextView
            android:id="@+id/tv_mall_back_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_33"
            android:text="返回"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_15"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/iv_close_mall_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toRightOf="@+id/ib_mall_back_"
            android:padding="@dimen/dp_5"
            android:text="关闭"
            android:textColor="@color/color_666"
            android:textSize="@dimen/sp_15"
            android:visibility="invisible"

            />

        <TextView
            android:id="@+id/tv_title_"
            android:layout_width="@dimen/dp_180"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="25"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_right_title_"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:textColor="@color/main_black"
            android:textSize="@dimen/sp_15"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>